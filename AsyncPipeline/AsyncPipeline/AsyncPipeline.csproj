<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- NuGet package metadata -->
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageId>AsyncPipeline</PackageId>
		<Version>1.0.0</Version>
		<Authors>Robertas Trumpauskas</Authors>
		<Company>ROBERTAS NUGGETS</Company>
		<Description>A lightweight, modular async pipeline framework for C#.</Description>
		<PackageTags>pipeline;async;tasks;middleware;functional</PackageTags>
		<RepositoryUrl>https://github.com/yourusername/AsyncPipeline</RepositoryUrl>
	</PropertyGroup>

</Project>